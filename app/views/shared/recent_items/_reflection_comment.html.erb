<%
  link_text = '"'
  link_text << truncate( Sanitize.clean( reflection_comment.body, :remove_contents => ['script'] ).strip, :length => 100, :separator => ' ' )
  link_text << '"'
%>
<div class="recent-item reflection">
  <h4><%= link_to( reflection_comment.reflection.title, conversation_reflection_url(reflection_comment.reflection.conversation, reflection_comment.reflection, :anchor => "reflection-comment-#{reflection_comment.id}")) %></h4>
  <div class="offset-2">
    <%= avatar_profile(reflection_comment.person, 40) %>
    <p>
      <strong><%= link_to(reflection_comment.person.name, user_url(reflection_comment.person)) %></strong> -
      <%= link_text %>
    </p>
    <p><%= link_to("Continue Reading", conversation_reflection_url(reflection_comment.reflection.conversation, reflection_comment.reflection, :anchor => "reflection-comment-#{reflection_comment.id}"), :class => "read-more") %></p>
  </div>
</div>