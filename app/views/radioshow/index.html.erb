<% content_for :header do %>
  <%= auto_discovery_link_tag(:rss, "http://feeds.theciviccommons.com/civiccommonsradio", { :title => "The Civic Commons Radio Show" } ) %>
<% end %>
<% content_for :main_body do %>
  <div class="wrapper">
    <div class="content-container">
      <h1>The Civic Commons Radio Show</h1>
      <%= render partial: 'description' %>
    </div>
    <div class="content-container">
      <div class="main-content">
        <%- @radioshows.each do |radioshow| %>
          <div class="entry-container">
            <div class="entry-details rounded">
              <img src="http://placehold.it/198x130" />
              <h4><%= link_to radioshow.title, radioshow_path(radioshow) %></h4>
              <p class="entry-tags"><%= radioshow.published.strftime('%B %d, %Y') %>, Topic: Transportation</p>
              <div> 
                <%= raw radioshow.summary %>
                <p><%= link_to "Listen to the podcast...", radioshow_path(radioshow), html: { title: radioshow.title } %></p> 
              </div>
            </div>
          </div>
          <p>&nbsp;</p>
        <%- end %>
        <%= will_paginate @radioshows, :inner_window => 3, :previous_label => "Previous", :next_label => "Next" %>
      </div>
      <div class="aside supplementary">
        <div class="mod">
          <h3>Only show radio shows about:</h3>
          <!-- TODO: This will need to be replaced with the actual filters for the radio shows -->
          <ul class="simple-list block-link-list">
              <li><a href="/issues?topic=1" class=""><span>Education</span> <em>2</em></a></li>
              <li><a href="/issues?topic=2" class=""><span>Environment</span> <em>1</em></a></li>
              <li><a href="/issues?topic=4" class=""><span>Economy</span> <em>9</em></a></li>
              <li><a href="/issues?topic=5" class=""><span>Crime &amp; Safety</span> <em>4</em></a></li>
              <li><a href="/issues?topic=6" class=""><span>Community</span> <em>6</em></a></li>
              <li><a href="/issues?topic=7" class=""><span>Government</span> <em>9</em></a></li>
          </ul>
        </div>
        <% blog_posts = ContentItem.where(content_type: 'BlogPost').order('published DESC').limit(3) %>
        <%= render partial: 'blog/recent_blog_posts_sidebar', locals: { blog_posts: blog_posts } %>        
      </div>
    </div>
  </div>
<% end %>
