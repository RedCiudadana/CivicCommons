<div class="media comment mbl" data-reflection-comment-id="<%= comment.id %>" id="reflection-comment-<%= comment.id %>">
  <%= link_to profile_image(comment.person,'40'), user_url(comment.person) ,:class => 'img', :title => comment.person.name %>
  <div class="bd">
    <% if signed_in? && (current_person.admin? || comment.person == current_person) %>
      <p class="fl-right alert alert-admin">
        <strong>Moderate:</strong> <%= link_to "Edit", edit_conversation_reflection_reflection_comment_url(comment.reflection.conversation, comment.reflection, comment) %> | <%= link_to "Delete", conversation_reflection_reflection_comment_url(comment.reflection.conversation, comment.reflection, comment), :method => :delete, :confirm => 'Are you sure you want to delete this?' %>
      </p>
    <% end %>
    <p><strong><%= link_to comment.person.name, user_url(comment.person) %> on <%= comment.created_at.to_date.to_s(:long) %></strong></p>
    <p><%= simple_format comment.body %></p>
  </div>
</div>
